<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transit Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        #map {
            height: 400px;
            width: 100%;
            margin-bottom: 20px;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 1.2em;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .preview-note {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
            color: #6c757d;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Sawari Sathi Admin</a>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- <div class="preview-note">
            Note: This is a static preview. In the actual implementation, the map would be powered by Google Maps API.
        </div> -->

        <!-- Tabs -->
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#stops">Stops</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#routes">Routes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#fares">Fares</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-3">
            <!-- Stops Tab -->
            <div class="tab-pane fade show active" id="stops">
                <div class="row">
                    <div class="col-md-12">
                        <div id="map">
                            [Google Maps Interface Would Appear Here]
                        </div>
                    </div>
                </div>
                
                <!-- Add Stop Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Add New Stop</h5>
                    </div>
                    <div class="card-body">
                            <form id="stop-form" method="POST" action="/api/addStop">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Stop Name</label>
                                        <input type="text" name="stopName" class="form-control" placeholder="Enter stop name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Latitude</label>
                                        <input type="number" step="any" name="latitude" class="form-control" placeholder="Click on map">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Longitude</label>
                                        <input type="number" step="any" name="longitude" class="form-control" placeholder="Click on map">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Stop</button>
                        </form>
                    </div>
                </div>

                <!-- Stops List -->
                <div class="card">
                    <div class="card-header">
                        <h5>Manage Stops</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Latitude</th>
                                    <th>Longitude</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody> <!-- Data will be inserted here dynamically -->
                        </table>






                        
                    </div>
                </div>

                <br><br>
<!-- Form for editing a stop -->
<div id="editStopForm" class="card mb-4" style="display:none;">
    <div class="card-header">
        <h5>Edit Stop</h5>
    </div>
    <div class="card-body">
        <form id="stopForm" method="POST" action="/api/updateStop">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label" for="stops_name">Stop Name</label>
                        <input type="text" id="stops_name" name="stops_name" class="form-control" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label" for="stops_lat">Latitude</label>
                        <input type="number" id="stops_lat" name="stops_lat" class="form-control" step="any" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label" for="stops_lon">Longitude</label>
                        <input type="number" id="stops_lon" name="stops_lon" class="form-control" step="any" required>
                    </div>
                </div>
            </div>
            <input type="hidden" id="stop_id" name="stop_id">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" onclick="closeForm()">Cancel</button>
        </form>
    </div>
</div>


            </div>

            <!-- Routes Tab -->
            <div class="tab-pane fade" id="routes">
                <!-- Add Route Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Add New Route</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Route Name</label>
                                        <input type="text" class="form-control" placeholder="Enter route name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Route Number</label>
                                        <input type="text" class="form-control" placeholder="Enter route number">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Stops</label>
                                <select multiple class="form-select">
                                    <option>Bus Station</option>
                                    <option>Portery Square</option>
                                    <option>Banepa</option>
                                    <option>Aadaa</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Route</button>
                        </form>
                    </div>
                </div>

                <!-- Routes List -->
                <div class="card">
                    <div class="card-header">
                        <h5>Manage Routes</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Route Name</th>
                                    <th>Route Number</th>
                                    <th>Stops Count</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>kavresthali</td>
                                    <td>101</td>
                                    <td>4</td>
                                    <td class="action-buttons">
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Mannnor</td>
                                    <td>202</td>
                                    <td>3</td>
                                    <td class="action-buttons">
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Fares Tab -->
            <div class="tab-pane fade" id="fares">
                <!-- Add Fare Form -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Add New Fare</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Fare from</label>
                                        <input type="text" class="form-control" placeholder="Enter fare from">
                                    </div>
                                </div> <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Fare to</label>
                                        <input type="text" class="form-control" placeholder="Enter fare to">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Amount</label>
                                        <input type="number" step="0.01" class="form-control" placeholder="Enter amount">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Route</label>
                                        <select class="form-select">
                                            <option value="">All Routes</option>
                                            <option>route 1</option>
                                            <option>route2</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Fare</button>
                        </form>
                    </div>
                </div>

                <!-- Fares List -->
                <div class="card">
                    <div class="card-header">
                        <h5>Manage Fares</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Fare from</th>
                                    <th>Fare to</th>
                                    <th>Amount</th>
                                    <th>Route</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Standard</td>
                                    <td>Standard</td>
                                    <td>2.50</td>
                                    <td> Routes</td>
                                    <td class="action-buttons">
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Airport Special</td>
                                    <td>Airport Special</td>
                                    <td>10.00</td>
                                    <td>routee</td>
                                    <td class="action-buttons">
                                        <button class="btn btn-sm btn-warning">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="../admindashboard/dashboard.js"></script>
